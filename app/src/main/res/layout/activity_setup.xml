<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SetupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/user" />

    <EditText
        android:id="@+id/setup_username"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/element_outline"
        android:drawableRight="@drawable/ic_phone_iphone_black_24dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textMultiLine"
        android:textColorHint="@color/colorOffBlack" />

    <EditText
        android:id="@+id/setup_fullname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setup_username"
        android:layout_marginBottom="10dp"
        android:background="@drawable/element_outline"
        android:drawableRight="@drawable/ic_person_black_24dp"
        android:ems="10"
        android:hint="Full name"
        android:inputType="textMultiLine"
        android:textColorHint="@color/colorOffBlack" />

    <EditText
        android:id="@+id/setup_country"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setup_fullname"
        android:layout_marginBottom="10dp"
        android:background="@drawable/element_outline"
        android:drawableRight="@drawable/ic_flag_black_24dp"
        android:ems="10"
        android:hint="Country"
        android:inputType="textMultiLine"
        android:textColorHint="@color/colorOffBlack" />

    <Button
        android:id="@+id/setup_save_button"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@color/colorGreyTransparent"
        android:text="Save" />
</RelativeLayout>